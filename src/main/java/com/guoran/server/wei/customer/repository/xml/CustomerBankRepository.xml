<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guoran.server.wei.customer.repository.CustomerBankRepository">
    <select id="findAll" resultType="CustomerBank">
        select * from customer_bank limit #{pageNum} , #{pageSize}

        <trim prefix="where" suffix="and">
            <if test="name != null">
                and name like concat('%',#{name},'%')
            </if>

        </trim>

    </select>

</mapper>
